{
	"name": "lil.gy",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "eslint .",
		"check": "tsc && pnpm lint && pnpm format -c && pnpm build",
		"format": "prettier -w . !\"pnpm-lock.yaml\"",
		"get-latest": "pnpm up -L -i -r",
		"reinstall": "rm -rf node_modules && rm pnpm-lock.yaml && pnpm install"
	},
	"dependencies": {
		"daisyui": "^5",
		"next": "^16",
		"next-themes": "^0.4.6",
		"react": "^19",
		"react-dom": "^19"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@types/node": "^25",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "^16",
		"prettier": "^3",
		"tailwindcss": "^4",
		"typescript": "^5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"sharp",
			"unrs-resolver"
		]
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	}
}
